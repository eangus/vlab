$TTL    604800
@       IN      SOA     ns1.{{ domain }}. admin.{{ domain }}. (
                  6     ; Serial
             604800     ; Refresh
              86400     ; Retry
            2419200     ; Expire
             604800     ; Negative Cache TTL
)

; name servers - NS records
    IN      NS      ns1.{{ domain }}.

; name servers - PTR records
BASTION_LAST_OCTECT_IP    IN    PTR    ns1.{{ domain }}.

