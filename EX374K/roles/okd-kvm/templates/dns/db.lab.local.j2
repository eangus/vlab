$TTL    604800
@       IN      SOA     ns1.{{ domain }}. admin.{{ domain }}. (
                  1     ; Serial
             604800     ; Refresh
              86400     ; Retry
            2419200     ; Expire
             604800     ; Negative Cache TTL
)

; name servers - NS records
    IN      NS      ns1

; name servers - A records
ns1.{{ domain }}.          IN      A       {{ bastion_ip }}

; OpenShift Container Platform Cluster - A records
bootstrap.{{ domain }}.        IN      A      {{ bootstrap_ip }}
master0.{{ domain }}.        IN      A      {{ master_node_ip }}
worker0.{{ domain }}.        IN      A      {{ worker_node_ip }}

; OpenShift internal cluster IPs - A records
api.{{ clustername }}.{{ domain }}.    IN    A    {{ bastion_ip }}
api-int.{{ clustername }}.{{ domain }}.    IN    A    {{ bastion_ip }}
*.apps.{{ clustername }}.{{ domain }}.    IN    A    {{ bastion_ip }}
etcd-0.{{ clustername }}.{{ domain }}.    IN    A     {{ master_node_ip }}
console-openshift-console.apps.{{ clustername }}.{{ domain }}.     IN     A     {{ bastion_ip }}
oauth-openshift.apps.{{ clustername }}.{{ domain }}.     IN     A     {{ bastion_ip }}

; OpenShift internal cluster IPs - SRV records
_etcd-server-ssl._tcp.{{ clustername }}.{{ domain }}.    86400     IN    SRV     0    10    2380    etcd-0.{{ clustername }}